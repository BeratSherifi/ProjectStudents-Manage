@model ProjectStudentsManage.Models.TBLStudent

@{
    ViewBag.Title = "AddTblStudent";
    Layout = "~/Views/Layout/UsingLayout.cshtml";
    var datenow = DateTime.Now;
}

<br />
<h2 style="margin-left:13px">Add Student</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="margin-left:17px">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     

        <div class="form-group">
            @Html.LabelFor(model => model.NameSt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameSt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameSt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BirthdatSt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.BirthdatSt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BirthdatSt, "", new { @class = "text-danger" })*@
                <input type="date" name="BirthdatSt" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AddressSt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AddressSt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AddressSt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.CreateDateSt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" value="@datenow" name="CreateDateSt" />
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.IdCr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="text" value="@ViewBag.Test" name="IdCr" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div style="margin-left:13px">
    @Html.ActionLink("Back", "PrinfTBLClassRoom")
</div>
